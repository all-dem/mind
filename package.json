{
  "name": "alicemind",
  "version": "0.0.1",
  "description": "Alice Mind is an MIT licensed command line tool for building training data and using Artificial General Intelligence.",
  "type": "module",
  "exports": "./index.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "bin": {
    "alicemind": "./index.js"
  },

  "scripts": {
    "clean": "rimraf dist node_modules dist coverage",
    "test": "jest",
    "test:watch": "jest --watch",
    "build:clean": "rimraf dist",
    "build:code": "tsc",
    "build:files": "mkdir -p dist/templates && cp -R src/templates/ dist/templates",
    "build": "run-s build:clean build:code build:files",
    "start": "node --experimental-specifier-resolution=node dist/index.js",
    "dev": "nodemon --exec esr src/index.ts",
    "lint": "eslint src/**/* --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint src/**/* --ext .js,.ts,.jsx,.tsx --fix",
    "publish": "pnpm run build && cp package.json dist/ && cd dist && pnpm install && cd .. && pnpm publish"
  },
  "keywords": [],
  "author": "Idris Elliott <work@davidjelliott.com>",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node16-strictest-esm": "^1.0.3",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.40.1",
    "esbuild": "^0.15.12",
    "esbuild-jest": "^0.5.0",
    "esbuild-runner": "^2.2.2",
    "eslint": "^8.0.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.2.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "*"
  },
  "dependencies": {
    "@types/fast-levenshtein": "^0.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^9.0.2",
    "@types/marked": "^4.0.7",
    "@types/marked-terminal": "^3.1.3",
    "ajv": "^8.11.0",
    "commander": "^9.4.1",
    "copyfiles": "^2.4.1",
    "fast-glob": "^3.2.12",
    "fast-levenshtein": "^3.0.0",
    "fs-extra": "^10.1.0",
    "inquirer": "^8.0.0",
    "marked": "^4.2.2",
    "marked-terminal": "^5.1.1",
    "openai": "^3.1.0",
    "pupa": "^3.1.0",
    "ts-jest": "^29.0.3"
  }
}
